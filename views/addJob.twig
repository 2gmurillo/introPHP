{% extends "layout.twig" %}
{% block main %}
	<header class="header">
		<div class="navbar">
			<div class="navbar__brand">{{brand}}</div>
			<div class="navbar__menu">
				<ul>
					<li><a href="/introPHP/job/add">addJob</a></li>
