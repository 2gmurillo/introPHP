			<input class="input" type="number" name="months" id="months" placeholder="Months"/>
			<input class="input" type="text" name="function1" id="function1" placeholder="Function 1"/>
			<input class="input" type="text" name="function2" id="function2" placeholder="Function 2"/>
			<input class="input" type="text" name="function3" id="function3" placeholder="Function 3"/>
			<button class="btn2" type="submit">Save</button>
		</form>
	</section>
</html>{% endblock %}
